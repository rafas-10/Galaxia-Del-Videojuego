body
    background-color #f5f6fa;
    font-size 14px;

h2,h3,h4,h5,ul,body,html 
    padding 0px
    margin 0px

.mtop16
    margin-top 16px

.wrapper
    min-height 100vh
    overflow hidden
    .col1
        float left
        position relative
        z-index 999
        width 17%
    .col2
        float left
        width 83% 

.sidebar
    background-color #ffffff
    min-height 100vh
    .section-top
        background-color #2ce7ee
        box-shadow 0 0.5rem 1rem rgba(0,0,0 0.15) 
    .logo
        display block
        margin 0px auto
        padding-top 5px
        padding-bottom 5px 
        width 60%  
    .user
        color #000 !important 
        padding 16px       
        a
            color #fff
            font-size 1.2em
    
    .main
        display block
        margin-top 10px
        ul
            li 
                margin-bottom 8px
                a
                    color #8998ac !important
                    display block
                    font-size 1em
                    padding 5px 5px
                    i
                        margin-right 5px
                    &:hover
                        background-color #2caaff
                        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
                        color #fff !important
                        text-decoration none
                
.page
    padding-top 16px
    padding-bottom 16px
    .breadcrumb
        background-color #fff
        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important
        .breadcrumb-item
            a
                &:hover
                    text-decoration none !important
                                    
    .panel
        background-color #fff
        border-radius 6px
        border-bottom 2px solid #2ce7ee
        width 100% 
        .header
            border-bottom 1px solid #e8e8e8
            h2.title
                display inline-block
                color #19213d
                font-size 1.1em
                padding 12px 16px
            ul
                display inline-block
                float right
                margin-right 12px
                li
                    display inline-block
                    position relative
                    a
                        color #333
                        display inline-block
                        padding 2px
                        &:hover
                            background-color #f6f6f6
                            color #222
                            text-decoration none
                        i
                            color #2ce7ee
                    ul
                        background-color #fff
                        border 1px solid #f0f0f0
                        display none
                        float none
                        position absolute
                        right -16px
                        width 160px
                        li
                            display inline-block
                            border-bottom 1px solid #f0f0f0
                            width 100%
                            &:last-child
                                border-bottom 0px
                            a
                                display block
                                width value
                    &:hover
                        ul
                            display block                               
        .inside
            padding 16px
            .nav
                .nav-link
                    border 1px solid #2ce7ee
                    margin-right 8px
                    &:hover
                        background-color #2ce7ee
                        color #fff
            .form_search
                display none
                margin-bottom 16px
                .btn
                    width 100%
            .big_count
                display block
                font-size 2em
                text-align center
                width 100%                    

.opts
    a
        border-radius 4px
        border 2px solid #555555
        display inline-block
        padding 8px 6px

.page_user
    .mini_profile
        .avatar
            display block
            margin 0px auto
            border-radius 50%
            width 150px
        .info
            background-color #fff
            span
                display block
                width 100%
            span.title
                font-weight bold
                margin-top 16px 
        .btn
            margin-top 16px
            width 100%            

